<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="chatHandler" class="kr.or.ddit.handler.ChatHandler"/>
	<!-- 웹소켓 엔드 포인트 설정~ -->
	<websocket:handlers allowed-origins="*">
	<!-- /ws-chat을 엔드포인트, 앤드포인트로 오는 메세지를 핸들링할 핸들러 chatHandler -->
		<websocket:mapping handler="chatHandler" path="/ws-chat" />
		<websocket:handshake-interceptors>
			<bean class="org.springframework.web.socket.server.support.HttpSessionHandshakeInterceptor" />
		</websocket:handshake-interceptors>
	</websocket:handlers>
	
	<bean id="AlarmHandler" class="kr.or.ddit.handler.AlarmHandler"/>
	<!-- 웹소켓 엔드 포인트 설정~ -->
	<websocket:handlers allowed-origins="*">
	<!-- /ws-chat을 엔드포인트, 앤드포인트로 오는 메세지를 핸들링할 핸들러 chatHandler -->
		<websocket:mapping handler="AlarmHandler" path="/ws-alarm" />
		<websocket:handshake-interceptors>
			<bean class="org.springframework.web.socket.server.support.HttpSessionHandshakeInterceptor" />
		</websocket:handshake-interceptors>
	</websocket:handlers>

</beans>
