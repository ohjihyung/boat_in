/**
 * SSY '내 프로젝트' 클릭 시 트리 생성 및 해당 파일 출력하기
 */
function getProData() {
	// 랜더링
	document.querySelector("#projectTree").innerHTML = "<div class='text-center'><div class='spinner-border spinner-border-sm m-2' role='status'></div></div>";
   
   // 접속한 아이디 가져오기(MEMBER_ID)
