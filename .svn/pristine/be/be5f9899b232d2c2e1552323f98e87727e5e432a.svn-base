<script type="text/javascript">
		
$('#regibtn').on('click',function(){
	var inputName = $('#memberName').val()
	var inputId= $('#memberId').val()
	var inputPw= $('#memberPw').val()
	var regiData = {
			memberName : inputName ,
			memberId : inputId ,
			memberPw : inputPw ,
		}
	regiCheck(regiData)
})
	
	
function regiCheck(regiData){
	$.ajax({
		type: "post",
		url: "${webPath}/member/regiCheck",
		data: regiData,
		dataType:"text",
		contentType : 'application/json; charset=utf-8',
		success : (res)=>{
			console.log(res)
			if (res =="OK") {
				Swal.fire({
					icon : "success",
					title : "회원가입을 축하합니다!",
					text : "인증이메일 전송하였습니다.",
					showConfirmButton: false,
					timer:2000,
							
				})
			}else if (res == "NO"){
				Swal.fire({
					icon : "error",
					title : "아이디를 확인해주세요",
					text : "이미 가입된 아이디 입니다. ",
					footer: "로그인하기 <a href = 'login'>Login </a>",
					showConfirmButton: false,
					timer:2000,
				})
			} 
			
		},
	})//ajax
}
function soscialRegiCheck(regiData){
// 	alert("넘어옴?")
	$.ajax({
		type: "post",
		url: "${webPath}/member/soscialRegiCheck",
		data: JSON.stringify(regiData),
		dataType:"text",
		contentType : 'application/json; charset=utf-8',
		success : async function(res){
			console.log(res)
			if (res =="OK") {
				Swal.fire({
					icon : "success",
					title : "회원가입을 축하합니다!",
					text : "인증이메일 전송하였습니다.",
					showConfirmButton: false,
					timer:2000,
							
				})
			}else if (res == "NO"){
				Swal.fire({
					icon : "error",
					title : "아이디를 확인해주세요",
					text : "이미 가입된 아이디 입니다. ",
					footer: "<a href = '/login'>Login </a>",
// 					showConfirmButton: false,
// 					timer:2000,
				})
			}else if (res == "setPw"){
				console.log("결과: "+ res)
				var { value: newPw } = await Swal.fire({
					  title: '비밀번호를 입력해주세요.',
					  input: 'password',
					  inputLabel: '소셜 최초 로그인 입니다. \n 비밀번호를 설정해주세요.',
					})
					console.log(newPw)
				$('#memberPw').val(newPw)
				await $('#regiForm').submit();
			}
			
			
		},
	})//ajax
}



</script>	
	
